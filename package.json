{
  "name": "@brew-digest/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve api",
    "dev": "nx serve api",
    "build": "nx build api --prod",
    "start:prod": "node dist/apps/api/main.js",
    "lint": "nx run-many -t lint --all",
    "test": "nx run-many -t test --all",
    "test:watch": "nx test api --watch",
    "test:cov": "nx test api --coverage",
    "test:e2e": "nx e2e api-e2e",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "node -r @swc-node/register prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t brewery-digest-api .",
    "docker:up": "docker-compose -p brewery-digest -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -p brewery-digest -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -p brewery-digest -f docker/docker-compose.yml logs -f",
    "docker:prod": "docker-compose -p brewery-digest -f docker-compose.prod.yml up -d"
  },
  "prisma": {
    "seed": "node -r @swc-node/register prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "private": true,
