# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/brewery_digest?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Resend Email Service (Replaces SMTP/IMAP)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@brewerydigest.com
APP_BASE_URL=http://localhost:3000

# Resend Webhook (for inbound emails)
RESEND_WEBHOOK_SECRET=your-webhook-secret-from-resend-dashboard

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=brewery-assets
MINIO_USE_SSL=false

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:4200

# Feature Flags
ENABLE_EMAIL_COLLECTION=false
ENABLE_SCRAPING=false
ENABLE_LLM_EXTRACTION=true
ENABLE_EMAIL_SENDING=false

# Monitoring & Logging
LOG_LEVEL=debug

# BullMQ Configuration
QUEUE_CONCURRENCY_COLLECT=5
QUEUE_CONCURRENCY_EXTRACT=10
QUEUE_CONCURRENCY_DEDUPLICATE=3
QUEUE_CONCURRENCY_DIGEST=2

# Scraping Rate Limits
INSTAGRAM_RATE_LIMIT_REQUESTS=1
INSTAGRAM_RATE_LIMIT_HOURS=1
FACEBOOK_RATE_LIMIT_REQUESTS=1
FACEBOOK_RATE_LIMIT_HOURS=1

# Cron Schedules (using cron syntax)
CRON_SOCIAL_SCRAPING=0 */6 * * *
CRON_RSS_POLLING=*/15 * * * *
CRON_DIGEST_GENERATION=0 9 * * 0

# Partition Settings
CONTENT_RETENTION_MONTHS=12
