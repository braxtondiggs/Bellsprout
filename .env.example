# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/brewery_digest?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Resend Email Service (Replaces SMTP/IMAP)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@brewdigest.com
APP_BASE_URL=http://localhost:3000

# Resend Webhook (for inbound emails)
RESEND_WEBHOOK_SECRET=your-webhook-secret-from-resend-dashboard

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=brewery-assets
MINIO_USE_SSL=false

# Frontend URL (for email verification links and CORS)
FRONTEND_URL=http://localhost:4200

# Monitoring & Logging
LOG_LEVEL=debug

# Scraping Rate Limits (hours between scrapes)
INSTAGRAM_RATE_LIMIT_HOURS=1
FACEBOOK_RATE_LIMIT_HOURS=1
RSS_RATE_LIMIT_HOURS=1

# Data Retention
CONTENT_RETENTION_MONTHS=12           # Database content retention
MINIO_EMAIL_RETENTION_DAYS=365        # Email snapshots: 12 months
MINIO_IMAGE_RETENTION_DAYS=730        # Images: 24 months
MINIO_DOCUMENT_RETENTION_DAYS=365     # Documents: 12 months
